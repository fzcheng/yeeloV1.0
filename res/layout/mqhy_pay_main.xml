<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mqhy_pay_bg"
    tools:context="com.mq.MainActivity" >

    <RelativeLayout
        android:id="@+id/mqhy_pay_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mqhy_pay_bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/mqhyPayBackBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mqhy_pay_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/mqhyPayTitleHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mqhy_pay_title_head"
            android:textColor="@color/black"
            android:textSize="@dimen/mqhy_pay_head_title" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mqhy_pay_title"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_below="@id/mqhy_pay_head"
        android:layout_marginTop="5dp"
        android:background="@drawable/mqhy_pay_info"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/mqhy_pay_account"
                android:textColor="@color/black"
                android:textSize="@dimen/mqhy_pay_title" />

            <TextView
                android:id="@+id/mqhy_pay_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mqhy_pay_title" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mqhy_payway_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/mqhy_pay_wares"
                android:textColor="@color/black"
                android:textSize="@dimen/mqhy_pay_title" />

            <TextView
                android:id="@+id/mqhy_pay_wares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mqhy_pay_title" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mqhy_payway_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/mqhy_pay_money"
                android:textColor="@color/black"
                android:textSize="@dimen/mqhy_pay_title" />

            <TextView
                android:id="@+id/mqhy_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="@dimen/mqhy_pay_title" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mqhy_pay_select_payway"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/mqhy_pay_title"
        android:layout_marginTop="5dp"
        android:background="@drawable/mqhy_select_payway"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mqhy_pay_select_payway"
            android:textColor="@color/white"
            android:textSize="@dimen/mqhy_pay_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mqhy_pay_select_payway"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/mqhyPayWxBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mqhy_pay_wx" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/mqhyPayAlipayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mqhy_pay_alipay" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/mqhyChinaMobilePayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mqhy_pay_mobile" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/mqhyChinaUnicomPayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mqhy_pay_unioncom" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/mqhyChinaTelecomPayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mqhy_pay_telecom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_weight="1.0" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mqhy_pay_neirong4"
            android:textColor="@color/black"
            android:textSize="@dimen/mqhy_pay_title_tip" />
    </RelativeLayout>

</RelativeLayout>